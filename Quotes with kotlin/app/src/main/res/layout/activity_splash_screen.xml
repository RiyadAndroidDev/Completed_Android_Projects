<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:orientation="vertical"
    android:background="#02126A">
    
    <View
        android:id="@+id/first"
        android:layout_width="18dp"
        android:layout_height="120dp"
android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        />
    <View
        android:id="@+id/second"
        android:layout_toStartOf="@id/first"
        android:layout_width="18dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:background="#1BCD95"
        /> <View
        android:layout_toStartOf="@id/second"
        android:layout_width="18dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:background="#B71C1C"
        />
 <View
        android:id="@+id/third"
        android:layout_width="18dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
android:layout_marginStart="20dp"
        android:background="@color/white"

        />
    <View
        android:id="@+id/fourth"
        android:layout_toEndOf="@+id/third"
        android:layout_width="18dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:background="#1BCD95"

        /> <View
 android:layout_toEndOf="@id/fourth"
    android:layout_width="18dp"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="20dp"
    android:background="#B71C1C"
    />
    
    <ImageView
        android:id="@+id/fifth"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advance Quotes And Status"
        android:layout_below="@id/fifth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/font5"
        android:gravity="center"
        />

</RelativeLayout>